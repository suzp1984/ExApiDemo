<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sqlite_db_sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="suzp1984.github.io.exapidemo.system.db.SqliteDbSampleActivity">

    <Button
        android:id="@+id/add_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:text="Add Student" />

    <Button
        android:id="@+id/get_student_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_student"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Get Students Size" />

    <Button
        android:id="@+id/get_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_student_count"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Get All Students" />

    <TextView
        android:id="@+id/student_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
